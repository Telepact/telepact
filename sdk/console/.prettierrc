{
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
    "overrides": [
        { "files": "*.svelte", "options": { "parser": "svelte" } },
        {
            "files": ["*.md"],
            "options": {
                "parser": "markdown",
                "printWidth": 80,
                "proseWrap": "always"
            }
        }
    ],
    "tabWidth": 4,
    "useTabs": true
}
