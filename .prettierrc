{
    "tabWidth": 4,
    "printWidth": 120,
    "plugins": ["prettier-plugin-msgpact"],
    "overrides": [
        {
            "files": "*.msgpact.json",
            "options": {
                "parser": "msgpact-parse"
            }
        },
        {
            "files": [".ts"],
            "options": {
                "singleQuote": true
            }
        },
        {
            "files": ["*.md"],
            "options": {
                "parser": "markdown",
                "printWidth": 80,
                "proseWrap": "always"
            }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
